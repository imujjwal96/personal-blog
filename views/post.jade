extends layout

block content
  .container
    header
    section
      .row
        .col-md-10
          +blogpost(title, date, author, categories, level, postSlug, read)
            if featuredImage
              div.featured
                img(src=featuredImage.file.url, title=featuredImage.title)
            section!= body
            .fb-comments(data-href='http://ujjwalbhardwaj.herokuapp.com/post/' + postSlug, data-width='100%', data-numposts='5')
